{
    "info": {
        "name": "Order Management System",
        "description": "Collection for testing Order Management System API endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Create Order",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"customerName\": \"John Doe\",\n    \"customerEmail\": \"john.doe@example.com\",\n    \"items\": [\n        {\n            \"productName\": \"Laptop\",\n            \"quantity\": 1,\n            \"price\": 999.99\n        },\n        {\n            \"productName\": \"Mouse\",\n            \"quantity\": 2,\n            \"price\": 29.99\n        }\n    ]\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/orders",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "orders"]
                },
                "description": "Create a new order with customer details and order items"
            }
        },
        {
            "name": "Get Order by ID",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/orders/1",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "orders", "1"]
                },
                "description": "Retrieve an order by its ID"
            }
        },
        {
            "name": "Get All Orders",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/orders",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "orders"]
                },
                "description": "Retrieve all orders"
            }
        },
        {
            "name": "Get Orders by Status",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/orders?status=PENDING",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "orders"],
                    "query": [
                        {
                            "key": "status",
                            "value": "PENDING"
                        }
                    ]
                },
                "description": "Retrieve orders filtered by status (PENDING, PROCESSING, SHIPPED, DELIVERED, CANCELLED)"
            }
        },
        {
            "name": "Update Order Status",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "\"PROCESSING\""
                },
                "url": {
                    "raw": "{{baseUrl}}/api/orders/1/status",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "orders", "1", "status"]
                },
                "description": "Update the status of an order"
            }
        },
        {
            "name": "Cancel Order",
            "request": {
                "method": "PUT",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/orders/1/cancel",
                    "host": ["{{baseUrl}}"],
                    "path": ["api", "orders", "1", "cancel"]
                },
                "description": "Cancel a pending order"
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8080",
            "type": "string"
        }
    ]
} 